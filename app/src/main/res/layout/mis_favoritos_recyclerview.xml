<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    >

    <ImageView
        android:id="@+id/imgProductoFv"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:contentDescription="@string/imagen_producto_favorito"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvTituloProductoFv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Producto"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/imgProductoFv"
        app:layout_constraintTop_toTopOf="@id/imgProductoFv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tvPrecioFv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$999.999"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tvTituloProductoFv"
        app:layout_constraintTop_toBottomOf="@id/tvTituloProductoFv"/>

    <TextView
        android:id="@+id/tvPrecioOriginalFv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1.200.000"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvPrecioFv"
        app:layout_constraintBottom_toBottomOf="@id/tvPrecioFv"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton_eliminar"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintStart_toStartOf="@id/tvTituloProductoFv"
        app:layout_constraintTop_toBottomOf="@id/tvPrecioOriginalFv"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>