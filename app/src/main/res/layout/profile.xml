<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil.Profile">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:menu="@menu/toolbar_menu" />

    <LinearLayout
        android:id="@+id/layout_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/oval_shape_with_image"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/txt_team_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tradly Team\n+123456789\nsupport@tradly.com"
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:gravity="start"
            android:textSize="16sp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/layout_user_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Language & Currency Button -->
    <Button
        android:id="@+id/btn_language_currency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Language"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Feedback Button -->
    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_language_currency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Refer a Friend Button -->
    <Button
        android:id="@+id/btn_refer_friend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Refer a Friend"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Terms & Conditions Button -->
    <Button
        android:id="@+id/btn_terms_conditions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_refer_friend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_terms_conditions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
