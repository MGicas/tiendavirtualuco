<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_hm"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/primary_color">

    <!-- Define guidelines for equal spacing -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/buscar"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <View
        android:id="@+id/view_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_search"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@id/guideline_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:autofillHints="Buscar producto"
        android:background="@android:color/transparent"
        android:hint="@string/search_hint"
        android:inputType="text"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/view_search"
        app:layout_constraintEnd_toEndOf="@id/view_search"
        app:layout_constraintStart_toStartOf="@id/view_search"
        app:layout_constraintTop_toTopOf="@id/view_search"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ic_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/search_icon"
        app:layout_constraintBottom_toBottomOf="@id/view_search"
        app:layout_constraintEnd_toStartOf="@id/et_search"
        app:layout_constraintStart_toStartOf="@id/view_search"
        app:layout_constraintTop_toTopOf="@id/view_search"
        app:srcCompat="@drawable/baseline_search_24" />

    <ImageView
        android:id="@+id/ic_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="68dp"
        android:contentDescription="@string/icono_de_venta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_currency_bitcoin_24" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/icono_de_carrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_shopping_cart_24" />
</androidx.constraintlayout.widget.ConstraintLayout>