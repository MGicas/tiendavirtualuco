<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="#7F8282" /> <!-- Cambia el color de fondo a #00D1A8 -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <solid android:color="#00D1A8" /> <!-- Cambia el color del progreso a #00D1A8 -->
            </shape>
        </clip>
    </item>
</layer-list>
