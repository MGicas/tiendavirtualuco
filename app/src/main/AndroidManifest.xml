<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso para leer almacenamiento externo -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TiendaVirtualUCO"
        tools:targetApi="31">

        <activity
            android:name=".perfil.Profile"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".perfil.EditProfileActivity" android:exported="true" />
        <activity android:name=".perfil.LanguageActivity" android:exported="true" />
        <activity android:name=".perfil.FeedbackActivity" android:exported="true" />
        <activity android:name=".perfil.ReferFriendActivity" android:exported="true" />
        <activity android:name=".perfil.TermsConditionsActivity" android:exported="true" />

    </application>

</manifest>
